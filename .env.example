# Discord Bot Configuration
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Your Discord application client ID (found in the same place as your bot token)
DISCORD_CLIENT_ID=your_client_id_here

# Your Discord user ID (used for contact information in bot messages)
# To get your ID: Enable Developer Mode in Discord Settings > Advanced, then right-click your name > Copy ID
BOT_OWNER_ID=your_discord_user_id_here

# Database Configuration
# Host where your MariaDB/MySQL database is running
DB_HOST=127.0.0.1

# Port for database connection (default MySQL/MariaDB port is 3306)
DB_PORT=3306

# Name of the database containing bot configuration tables (na_bot_server_configs, etc.)
DB_NAME=NA_Schedule

# Name of the database containing the source schedule data (if different from DB_NAME)
# Leave empty or omit this line if source data is in the same database as bot tables
DB_SOURCE_NAME=ozma

# Database user with SELECT permissions on the source table and full permissions on bot tables
DB_USER=na_schedule_bot

# Password for the database user
DB_PASSWORD=secure_password_here

# Source Database Table Name
# Name of the table containing FFXIV raid schedule data (from posted run aggregator)
DB_TABLE_NAME=datacenterNA

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Optional: Health Check Port
HEALTH_PORT=3000
